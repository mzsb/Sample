<Page
    x:Class="Sample.UWPClient.Views.ConcertDetailsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Sample.UWPClient.Converters"
    xmlns:usercontrols="using:Sample.UWPClient.UserControls"
    mc:Ignorable="d">

    <usercontrols:SampleNavigationView x:ConnectionId='2' x:Name="NavView">
        <usercontrols:SampleNavigationView.NavigationContent>

            <Grid>
           
                <TextBlock x:ConnectionId='3' x:Name="PageHeader"
                            Grid.Row="0"
                            Grid.Column="0"
                            Text="{Binding Concert.Name}"
                            FontSize="100"
                            Margin="30,30,0,0"/>
        
            </Grid>
            
       </usercontrols:SampleNavigationView.NavigationContent>
    </usercontrols:SampleNavigationView>
</Page>

