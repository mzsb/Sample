<Page
    x:Class="Sample.UWPClient.Views.ConcertsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:Sample.UWPClient.Converters"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Page.Resources>

    <NavigationView IsBackButtonVisible="Collapsed">

        <NavigationView.MenuItems>

            <NavigationViewItemHeader Content="Adminisztráció" 
                                      Visibility="{Binding NewConcertButtonVisibility, Converter={StaticResource BoolToVis}}"/>

            <NavigationViewItem Icon="AllApps"
                                Content="Koncertek"/>

            <NavigationViewItem x:ConnectionId='2' Icon="Add"
                                Content="Új koncert"
                                                         
                                Visibility="{Binding NewConcertButtonVisibility, Converter={StaticResource BoolToVis}}"/>

        </NavigationView.MenuItems>
        
        <NavigationView.PaneFooter>
            
            <NavigationViewItem x:ConnectionId='3' Icon="MoveToFolder"
                                Content="Kijelentkezés"
                                                      />
            
        </NavigationView.PaneFooter>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="497*"/>
            </Grid.RowDefinitions>

            <GridView x:ConnectionId='4' x:Name="DictionaryList"
                      Margin="20,14,0,0"
                      Grid.Column="0"
                      Grid.Row="2"
                      ItemsSource="{Binding SoonConcerts}"
                      IsItemClickEnabled="true"
                                                   >

                <GridView.Header>
                    <TextBlock Text="Soon" 
                               FontSize="50"
                               Margin="0,0,0,20"/>
                </GridView.Header>

                <GridView.ItemTemplate>
                    <DataTemplate>

                        <TextBlock Margin="0,5"
                                   Width="100"
                                   Height="100"
                                   HorizontalAlignment="Center"
                                   Text="{Binding Name}"
                                   FontSize="25"/>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </Grid>
    </NavigationView>
</Page>

